<main class="container mb-5">

    <div class="row">
        <div class="col-md-12 text-center mt-5">
            <h1>{{this.title}}</h1>
            <p>by
                <span>
                    <a href="#">{{this.author}}</a>
                </span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
            </p>
            <hr class="mt-3">

        </div>
    </div>

    <div class="row mt-3">

        <div class="col-md-4 text-center book">
            <img src="{{this.image}}" class="img-fluid" alt="I am a book cover picture">
        </div>
        <div class="col-md-8 border-lv mb-5">
            <p class="book-summary">
                <b class="text-uppercase mr-2">Summary:</b> {{this.summary}}</p>
            <p>
                <b class="text-uppercase">ISBN: </b>
                <span id="isbn">{{this.industryIdentifier}}</span>
            </p>
            <div class="row">

                <div class="col-md-12 col-lg-6 mb-3">
                    <div>
                        <span class="on-stock">{{this.numShelved}}</span>
                        <b>On Shelves</b>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 mb-3">
                    <span>
                        <a id="actionBtnFav" class="favorite-book" href="#" data-medium-id={{this.id}}>
                            <i class="fa fa-heart-o" aria-hidden="true"></i>Add to Favorites</a>
                    </span>
                </div>
            </div>
            {{!-- data-user-id={{this.userId}} --}}
            <div class="row action-book-row">
                <div class="col-md-12">
                    <button id="actionBtnReserve" class="btn btn-success text-uppercase" type="button" data-toggle="modal" data-target=".bd-example-modal-sm"
                        data-medium-id={{this.id}}>Reserve Book
                    </button>
                </div>
            </div>

            <!-- Small modal -->
            <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title text-center" id="mySmallModalLabel">
                                <span class="logo">
                                    <span>book</span>.log</span>
                            </h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">Ã—</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Thank you for requestiong the book
                                <b>{{this.title}}
                                </b> by
                                <i>{{this.author}}
                                </i>.
                            </p>
                            <p>We are sending you an e-mail notification with more details!</p> {{!--
                            <p id="reservation-position">
                                this text will change </p> --}}
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-success text-uppercase" href="/">Reserve Another Book</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>